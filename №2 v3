import java.util.Scanner;

public class NSDExample {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Введення двох чисел користувачем
        int a, b;
        System.out.print("Введіть перше число: ");
        a = scanner.nextInt();
        System.out.print("Введіть друге число: ");
        b = scanner.nextInt();

        // Використання циклу while для обчислення НСД
        int x = a, y = b;
        while (x != y) {
            if (x > y) {
                x = x - y;
            } else {
                y = y - x;
            }
        }
        System.out.println("Найбільший спільний дільник (НСД) з циклом while: " + x);

        // Використання циклу do-while для обчислення НСД
        x = a;
        y = b;
        do {
            if (x > y) {
                x = x - y;
            } else {
                y = y - x;
            }
        } while (x != y);
        System.out.println("Найбільший спільний дільник (НСД) з циклом do-while: " + x);

        scanner.close();
    }
}
